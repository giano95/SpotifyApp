<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/song2"
    android:scaleType="fitStart"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="100sp"
    android:paddingRight="100sp"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/show_best_score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/show_best_score_textview"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/score_1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/score_2_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/score_2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/score_3_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/score_3_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/score_4_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/score_3_button"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/score_5_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/score_4_button"
        android:layout_marginTop="40dp" />


</RelativeLayout>